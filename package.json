{
  "name": "@journals/storage-service",
  "version": "0.1.0",
  "author": "Journals",
  "private": false,
  "scripts": {
    "dev": "npm run build && concurrently --kill-others \"tsc -w -p src\" \"nodemon dist/index.js -e ts\"",
    "debug": "npm run build && concurrently --kill-others \"tsc -w -p src\" \"nodemon --inspect dist/index.js -e ts\"",
    "test:watch": "mocha -r ts-node/register -w ./spec/**/*.spec.ts --watch-extensions ts",
    "test": "mocha -r ts-node/register -w ./spec/**/*.spec.ts",
    "build": "tsc -p src",
    "start": "node dist/index.js",
    "build:docker": "docker build -t rjmacarthy/express-typescript-starter .",
    "docker:compose": "docker-compose up",
    "format": "prettier --write 'src/**/*ts'",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:test": "tslint -c tslint.json 'spec/**/*.ts'",
    "format:test": "prettier --write 'spec/**/*ts'"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^1.2.0",
    "@textile/hub": "^6.2.0",
    "@textile/threads-core": "^0.3.1",
    "@types/morgan": "^1.9.3",
    "@types/multer": "1.4.7",
    "body-parser": "1.19.0",
    "cookie-parser": "1.4.5",
    "cross-env": "7.0.3",
    "debug": "4.3.2",
    "dotenv": "10.0.0",
    "exiftool-vendored": "^15.2.0",
    "express": "4.17.1",
    "fluent-ffmpeg": "^2.1.2",
    "fresh": "0.5.2",
    "glob": "7.1.7",
    "lodash": "4.17.21",
    "minimist": "1.2.5",
    "mongoose": "5.13.5",
    "morgan": "^1.10.0",
    "multer": "1.4.2",
    "negotiator": "0.6.2",
    "pug": "3.0.2",
    "serve-favicon": "2.5.0",
    "socket.io": "4.1.3",
    "tslint-config-prettier": "1.18.0",
    "web3.storage": "^3.1.0"
  },
  "devDependencies": {
    "@types/chai": "4.2.21",
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.13",
    "@types/lodash": "4.14.172",
    "@types/mocha": "9.0.0",
    "@types/node": "16.4.12",
    "@types/sinon": "10.0.2",
    "@types/socket.io": "3.0.2",
    "chai": "4.3.4",
    "concurrently": "6.2.0",
    "mocha": "9.0.3",
    "node-mocks-http": "1.10.1",
    "nodemon": "2.0.12",
    "prettier": "2.3.2",
    "sinon": "11.1.2",
    "ts-node": "10.1.0",
    "tslint": "6.1.3",
    "typescript": "4.3.5"
  }
}
